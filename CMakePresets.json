{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "mode:debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true
    },
    {
      "name": "mode:optimized_but_checked",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "hidden": true
    },
    {
      "name": "mode:optimized",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true,
        "CMAKE_LINK_SEARCH_START_STATIC": true,
        "CMAKE_LINK_SEARCH_END_STATIC": true
      },
      "hidden": true
    },
    {
      "name": "condition:creates_compilation_database",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{COMPILATION_DATABASE_DIR}",
        "rhs": ""
      },
      "hidden": true
    },
    {
      "name": "analyzer:clang_tidy",
      "inherits": [
        "condition:creates_compilation_database"
      ],
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "$env{CLANG_TIDY_EXECUTABLE};--config-file=${sourceDir}/.clang-tidy;-p=$env{COMPILATION_DATABASE_DIR};--export-fixes=${sourceDir}/out/lint/clang_tidy_fixes.yaml;--verify-config;$env{CLANG_TIDY_EXTRA_ARGS}"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{CLANG_TIDY_EXECUTABLE}",
        "rhs": ""
      },
      "hidden": true
    },
    {
      "name": "analyzer:cppcheck",
      "cacheVariables": {
        "CMAKE_CXX_CPPCHECK": "$env{CPPCHECK_EXECUTABLE};--std=c++17;--cppcheck-build-dir=${sourceDir}/out/lint/cppcheck_cache;$env{CPPCHECK_EXTRA_ARGS}"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{CPPCHECK_EXECUTABLE}",
        "rhs": ""
      },
      "hidden": true
    },
    {
      "name": "analyzer:iwyu",
      "cacheVariables": {
        "CMAKE_CXX_INCLUDE_WHAT_YOU_USE": "$env{IWYU_EXECUTABLE};-Xiwyu;--no_comments;-Xiwyu;--no_fwd_decls;$env{IWYU_EXTRA_ARGS}"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{IWYU_EXECUTABLE}",
        "rhs": ""
      },
      "hidden": true
    },
    {
      "name": "analyzer:asan",
      "cacheVariables": {
        "ENABLE_ASAN": true,
        "ENABLE_MSAN": false,
        "ENABLE_TSAN": false
      },
      "hidden": true
    },
    {
      "name": "analyzer:lsan",
      "cacheVariables": {
        "ENABLE_LSAN": true,
        "ENABLE_MSAN": false,
        "ENABLE_TSAN": false
      },
      "hidden": true
    },
    {
      "name": "analyzer:msan",
      "cacheVariables": {
        "ENABLE_ASAN": false,
        "ENABLE_LSAN": false,
        "ENABLE_MSAN": true,
        "ENABLE_TSAN": false
      },
      "hidden": true
    },
    {
      "name": "analyzer:tsan",
      "cacheVariables": {
        "ENABLE_ASAN": false,
        "ENABLE_LSAN": false,
        "ENABLE_MSAN": false,
        "ENABLE_TSAN": true
      },
      "hidden": true
    },
    {
      "name": "analyzer:ubsan",
      "cacheVariables": {
        "ENABLE_UBSAN": true
      },
      "hidden": true
    },
    {
      "name": "analyzer:asan+lsan",
      "inherits": [
        "analyzer:asan",
        "analyzer:lsan"
      ],
      "hidden": true
    },
    {
      "name": "package_manager:vcpkg",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "condition": {
        "type": "notEquals",
        "lhs": "$env{VCPKG_ROOT}",
        "rhs": ""
      },
      "hidden": true
    },
    {
      "name": "package_manager:cpm",
      "cacheVariables": {
        "USE_CPM": true
      },
      "hidden": true
    },
    {
      "name": "Debug (Sample)",
      "inherits": [
        "mode:debug",
        "package_manager:cpm",
        "analyzer:ubsan"
      ],
      "generator": "Ninja Multi-Config",
      "binaryDir": "$env{COMPILATION_DATABASE_DIR}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_COLOR_DIAGNOSTICS": true
      },
      "environment": {
        "COMPILATION_DATABASE_DIR": "${sourceDir}/out/build/debug"
      }
    },
    {
      "name": "Optimized (Sample)",
      "inherits": [
        "mode:optimized",
        "package_manager:cpm"
      ],
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/optimized",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_COLOR_DIAGNOSTICS": true
      }
    }
  ]
}
